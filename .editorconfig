# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation for py
[*.{py,coffee,litcoffee}]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[{Makefile,*.java,*.c,*.h,*.cpp,*.gradle,*.xml}]
indent_style = tab
intent_size = 4

